{
  "name": "report-fetcher",
  "version": "1.0.0",
  "description": "Electron app to fetch report data",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "packwin": "electron-packager . testApp --platform=win32 --arch=x64 --overwrite --out=buildwin --ignore=node_modules/electron",
    "packlinux": "electron-packager . testApp --platform=linux --arch=x64 --overwrite --out=buildlinux --ignore=node_modules/electron",
    "packmac": "electron-packager . testApp --platform=darwin --arch=x64 --overwrite --out=buildmac --ignore=node_modules/electron"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "electron": "^23.3.13",
    "jsdom": "^22.1.0",
    "node-fetch": "^2.7.0",
    "qs": "^6.14.0"
  },
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "include": "build/installer.nsh"
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  },
  "directories": {
    "output": "build"
  }
}
